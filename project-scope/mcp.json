{
  "// Golem - Project MCP Servers": "",
  "// Location: .mcp.json (project root, checked into git)": "",
  "// These extend Claude Code with external tools": "",

  "mcpServers": {

    "context7": {
      "// Fetches up-to-date library docs (Nuxt, Next, pg, etc.)": "",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@^2.1.1"]
    },

    "postgres": {
      "// PostgreSQL access â€” use a READ-ONLY database user for safety": "",
      "// See: skills/databases/postgres.md for connection setup": "",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres@^0.6.2"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${DATABASE_URL}"
      }
    },

    "filesystem": {
      "// Safe filesystem access for reading config/docs outside project": "",
      "// TEMPLATE: Replace the path below with your shared docs directory": "",
      "// then remove these comment lines to enable": "",
      "disabled": true,
      "command": "npx",
      "args": [
        "-y", "@modelcontextprotocol/server-filesystem@^2026.1.14",
        "--read-only",
        "/path/to/your/shared/docs"
      ]
    },

    "sequential-thinking": {
      "// Deep reasoning for complex architecture decisions": "",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking@^2025.12.18"]
    }
  }
}
