{
  "// Golem - Project-Level Settings": "",
  "// Location: .claude/settings.json (checked into git)": "",

  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(npx vitest:*)",
      "Bash(npx playwright:*)",
      "Bash(npx eslint:*)",
      "Bash(npx tsc:*)",
      "Bash(npx nuxi:*)",
      "Bash(npx next:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git stash:*)",
      "Bash(php -l:*)",
      "Bash(find .:*)",
      "Bash(grep -rn:*)",
      "Bash(grep -r:*)",
      "Bash(cat ./:*)",
      "Bash(head ./:*)",
      "Bash(tail ./:*)",
      "Bash(wc:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(touch:*)",
      "Bash(chmod +x:*)",
      "Bash(echo:*)",
      "Bash(printf:*)",
      "Bash(python3:*)",
      "Bash(node:*)",
      "Bash(jq:*)",
      "Bash(semgrep:*)",
      "Bash(npm audit:*)",
      "Bash(npm install:*)",
      "Read(.golem/**)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.local)",
      "Read(./.env.production)",
      "Read(./.env.development)",
      "Read(./.env.*.local)",
      "Read(./secrets/**)",
      "Read(./**/credentials*)",
      "Read(./**/*.pem)",
      "Read(./**/*.key)"
    ]
  },

  "env": {
    "MAX_THINKING_TOKENS": "16000",
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "600000"
  },

  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f .golem/state.json ] && command -v jq >/dev/null 2>&1; then echo \"[GOLEM] Phase: $(jq -r '.phase // \"unknown\"' .golem/state.json) | Tasks: $(jq -r '\"\\(.tasks_completed // 0)/\\(.tasks_total // 0)\"' .golem/state.json)\"; fi"
          }
        ]
      }
    ],

    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.golem/hooks/block-destructive.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.golem/hooks/block-push-main.sh"
          }
        ]
      }
    ],

    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "command -v jq >/dev/null 2>&1 || exit 0; jq -r '.tool_input.file_path // empty' | tr -d '\\n\\r' | { read f; if [ -n \"$f\" ]; then mkdir -p .golem/logs 2>/dev/null; echo \"$(date +%Y-%m-%dT%H:%M:%S) $f\" >> .golem/logs/file-changes.log 2>/dev/null; fi; exit 0; }"
          }
        ]
      }
    ]
  },

  "enableAllProjectMcpServers": false
}
