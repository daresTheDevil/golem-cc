{
  "// SUPER GOLEM - Local Project Settings (NOT committed to git)": "",
  "// Location: .claude/settings.local.json": "",
  "// Put your personal overrides, API keys helper, and experimental stuff here": "",

  "permissions": {
    "// Uncomment permissions you need for your workflow": "",
    "// Bash(docker:*)   — container management (container escape risk)": "",
    "// Bash(kubectl:*)  — kubernetes cluster access": "",
    "// Bash(curl:*)     — HTTP requests (data exfiltration risk)": "",
    "// Bash(ssh:*)      — remote server access": "",
    "allow": []
  },

  "env": {
    "// Bump thinking tokens for complex tasks": "",
    "MAX_THINKING_TOKENS": "32000",

    "// Longer timeout for big builds": "",
    "BASH_DEFAULT_TIMEOUT_MS": "600000",
    "BASH_MAX_TIMEOUT_MS": "900000",

    "// Bigger output for verbose test results": "",
    "BASH_MAX_OUTPUT_LENGTH": "100000"
  }
}
